{% extends 'base.html.twig' %}

{% block title %}All categories
{% endblock %}

{% block body %}
	<h1>Toutes les catégories de la table category :
	</h1>
	{% for category in categories %}
		<div>
			{{ loop.index }}
			/
			{{ category.name }}
			/
			<a href="{{ path("category_show", { categoryName: category.name }) }}">Voir les séries
			</a>
		</div>
	{% else %}
		Aucune série trouvée.
	{% endfor %}

	<a href="{{ path('app_index') }}">
		Retour à l'accueil
	</a>
{% endblock %}
