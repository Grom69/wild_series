{% extends 'base.html.twig' %}

{% block title %}Episode #
	{{ episode.number }}
{% endblock %}

{% block body %}
	<div class="media">
		<div class="media-body">
			<h1 class="mt-0">
				{{ program.title }}
			</h1>
			<h3 class="mt-0">
				Saison
				{{ season.number }}
			</h3>
			<p>Episode
				{{ episode.number }}
				:
				{{ episode.title }}</p>
			<p>Résumé :<br>
				{{ episode.synopsis }}</p>
		</div>
	</div>

	<a href="{{ path("program_season_show", { program: program.id , season: season.id }) }}">
		Retour à la liste des épisodes
	</a>

{% endblock %}
