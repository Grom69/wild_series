{% extends 'base.html.twig' %}

{% block title %}Saison #
	{{ season.number }}
{% endblock %}

{% block body %}
	<div class="media">
		<div class="media-body">
			<h1 class="mt-0">
				Saison
				{{ season.number }}
				de
				{{ program.title }}
			</h1>
			<p>{{ season.description }}</p>
			<p>Liste des épisodes :
				{% for episode in episodes %}
					<ul>
						<li>Episode
							{{ episode.number }}
							:
							{{ episode.title }}
						</li>
					</ul>
				{% endfor %}
			</p>


		</div>
	</div>

	<a href="{{ path("program_show", { id: program.id }) }}">
		Retour à la liste des saisons
	</a>

{% endblock %}
